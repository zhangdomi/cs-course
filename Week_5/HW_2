#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    printf("The row input: \n");
    scanf("%d", &n);
    for(int i=0; i<n; i++){
        for(int k=n; k>i; k--){
        printf(" ");
        }
        for(int j=0; j<(2*i+1); j++){
            printf("o");
        }
        printf("\n");
    }
    return 0;
}
